<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_layout"
        android:layout_width="618px"
        android:layout_height="444px"
        android:background="@drawable/dialog_fav_edit_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_edittext_layout"
            android:layout_width="522px"
            android:layout_height="90px"
            android:layout_marginTop="48px"
            android:background="@drawable/search_edittext_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_fav_icon"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginLeft="15px"
                android:src="@drawable/icon_star_normal"></ImageView>

            <EditText
                android:id="@+id/dialog_fav_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="My Favorites"
                android:inputType="text"
                android:textColor="#e8e8e8"
                android:textColorHint="#40ffffff"
                android:textSize="28px"></EditText>

            <ImageView
                android:id="@+id/dialog_fav_clear_all"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_clear_all"
                android:visibility="visible"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_fav_icon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="57px">

            <ImageView
                android:id="@+id/dialog_home_icon"
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_marginLeft="57px"
                android:src="@drawable/dialog_icon_home" />

            <ImageView
                android:id="@+id/dialog_office_icon"
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_marginLeft="36px"
                android:src="@drawable/dialog_icon_office" />

            <ImageView
                android:id="@+id/dialog_star_icon"
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_marginLeft="36px"
                android:src="@drawable/dialog_icon_star" />

            <ImageView
                android:id="@+id/dialog_heart_icon"
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_marginLeft="36px"
                android:src="@drawable/dialog_icon_heart" />

            <ImageView
                android:id="@+id/dialog_pin_icon"
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_marginLeft="36px"
                android:src="@drawable/dialog_icon_pin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="57px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_btn_done"
                android:layout_width="330px"
                android:layout_height="72px"
                android:layout_marginLeft="48px"
                android:background="@drawable/dialog_btn_select_bg"
                android:text="Done"
                android:textColor="#ffffff"
                android:textSize="30px"></Button>

            <Button
                android:id="@+id/dialog_btn_cancel"
                android:layout_width="162px"
                android:layout_height="72px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="48px"
                android:text="Cancel"
                android:background="@drawable/transparent"
                android:textColor="#ffffff"
                android:textSize="30px"></Button>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_delete"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_margin="54px"
        android:src="@drawable/icon_delete_normal"></ImageView>


</LinearLayout>
