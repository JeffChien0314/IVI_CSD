<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1020px"
    android:layout_height="840px"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="14px"
    android:background="#15284A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="60px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text="Included Widgets"
            android:textColor="@color/white"
            android:textSize="30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:text="* Tap and hold a widget to move it around"
            android:textColor="#80FFFFFF"
            android:textSize="22px" />

        <com.fxc.ev.launcher.utils.views.DragGridView
            android:id="@+id/draggable_grid_view_included"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="210px"
            android:gravity="center_horizontal"
            android:horizontalSpacing="18px"
            android:numColumns="2"
            android:stretchMode="none"
            android:verticalSpacing="12px"
            android:layout_marginTop="25px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42px"
            android:text="More Widgets"
            android:textColor="@color/white"
            android:textSize="30px" />

        <GridView
            android:id="@+id/grid_view_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18px"
            android:layout_marginTop="12px"
            android:columnWidth="210px"
            android:horizontalSpacing="26px"
            android:numColumns="4"
            android:paddingEnd="36px"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scroll_bar"
            android:stretchMode="columnWidth"
            android:verticalSpacing="12px" />

    </LinearLayout>

    <TextView
        android:id="@+id/edit_done"
        android:layout_width="150px"
        android:layout_height="60px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30px"
        android:layout_marginTop="30px"
        android:background="@drawable/widget_edit_done_bg"
        android:gravity="center"
        android:text="Done"
        android:textColor="@color/white"
        android:textSize="30px" />

    <TextView
        android:id="@+id/edit_tips"
        android:layout_width="456px"
        android:layout_height="99px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="36px"
        android:layout_marginTop="147px"
        android:text="* The number of widgets have already reached the maximum limit. \n\nDelete an existing one if you want to add a new."
        android:textColor="#FFDCB0"
        android:textSize="22px"
        android:visibility="gone"/>


</RelativeLayout>