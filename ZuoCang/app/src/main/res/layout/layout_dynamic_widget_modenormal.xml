<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="535px"
    android:layout_height="342px"
    android:layout_centerInParent="true">
    <ImageView
            android:id="@+id/widget_drive_mode_comfort"
            android:layout_width="179px"
            android:layout_height="342px"
            android:clickable="true"
            android:src="@drawable/img_widget_dynamic_comfort_normal" />

        <ImageView
            android:id="@+id/widget_drive_mode_normal"
            android:layout_width="178px"
            android:layout_height="342px"
            android:clickable="true"
            android:layout_toRightOf="@+id/widget_drive_mode_comfort"
            android:src="@drawable/img_widget_dynamic_normal_active"/>

    <ImageView
        android:id="@+id/widget_drive_mode_sport"
        android:layout_width="178px"
        android:layout_height="342px"
        android:layout_toRightOf="@+id/widget_drive_mode_normal"
        android:clickable="true"
        android:src="@drawable/img_widget_dynamic_sport_normal" />
    <ImageView
        android:id="@+id/title"
        android:layout_width="438px"
        android:layout_height="36px"
        android:scaleType="fitStart"
        android:layout_marginLeft="18px"
        android:layout_marginTop="15px"
        android:src="@drawable/title_icon"/>
    <ImageView
        android:id="@+id/widget_open"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginTop="10px"
        android:layout_marginLeft="9px"
        android:layout_toRightOf="@+id/title"
        android:clickable="true"
        android:src="@drawable/icon_widget_openapp" />

</RelativeLayout>
