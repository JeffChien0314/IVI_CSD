<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="535px"
    android:layout_height="342px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
      <ImageView
            android:id="@+id/widget_drive_mode_comfort"
            android:layout_width="179px"
            android:layout_height="342px"
            android:clickable="true"
            android:src="@drawable/img_widget_dynamic_comfort_normal" />
        <ImageView
            android:id="@+id/widget_drive_mode_comfort_active"
            android:layout_width="179px"
            android:layout_height="342px"
            android:clickable="true"
            android:visibility="gone"
            android:src="@drawable/img_widget_dynamic_comfort_active" />

        <ImageView
            android:id="@+id/widget_drive_mode_normal_active"
            android:layout_width="178px"
            android:layout_height="342px"
            android:clickable="true"
            android:src="@drawable/img_widget_dynamic_normal_active"/>
        <ImageView
            android:id="@+id/widget_drive_mode_normal"
            android:layout_width="178px"
            android:layout_height="342px"
            android:visibility="gone"
            android:clickable="true"
            android:src="@drawable/img_widget_dynamic_normal_normal"/>

    <ImageView
        android:id="@+id/widget_drive_mode_sport"
        android:layout_width="178px"
        android:layout_height="342px"
        android:layout_toRightOf="@+id/widget_drive_mode_normal"
        android:clickable="true"
        android:src="@drawable/img_widget_dynamic_sport_normal" />
        <ImageView
            android:id="@+id/widget_drive_mode_sport_active"
            android:layout_width="178px"
            android:layout_height="342px"
            android:clickable="true"
            android:visibility="gone"
            android:src="@drawable/img_widget_dynamic_sport_active" />
    </LinearLayout>
    <ImageView
        android:id="@+id/widget_open"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginTop="10px"
        android:layout_marginLeft="465px"
        android:clickable="true"
        android:src="@drawable/icon_widget_openapp" />

</RelativeLayout>
